<%- include ../include/header.ejs %>
<form class="form-horizontal" action="/article/edit/save" method="post" enctype="multipart/form-data">
  <input type="hidden" class="disabled" value="<%= article._id %>" name="_id">
  <div class="form-group">
    <label for="title" class="col-sm-2 control-label">标题</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="title" value="<%= article.title %>" name="title" placeholder="标题">
    </div>
  </div>
  <div class="form-group">
    <label for="content" class="col-sm-2 control-label">正文</label>
    <div class="col-sm-10">
      <textarea class="form-control" name="content" id="content" name="content" cols="30" rows="10"
                placeholder="请输入正文"><%= article.content %></textarea>
    </div>
  </div>
  <div class="form-group">
    <label for="img" class="col-sm-2 control-label">图片</label>
    <div class="col-sm-10">
      <div class="col-xs-6" style="margin-bottom: 10px"><img class="img-responsive" src="<%= article.img %>" alt=""></div>
      <input type="file" class="form-control" id="img" name="img">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">保存</button>
      <a href="/article/detail/<%= article._id %>" class="btn btn-primary">取消</a>
    </div>
  </div>
</form>
<%- include ../include/footer.ejs %>