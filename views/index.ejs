<%- include include/header.ejs %>
<% articles.forEach((article) => { %>
<div class="media">
  <div class="media-left media-middle">
    <a href="#">
      <img class="media-object" src="<%= article.user.avatar %>" alt="">
    </a>
  </div>
  <div class="media-body">
    <h4 class="media-heading"><a href="/article/detail/<%= article._id %>"><%= article.title %></a></h4>
    <p><%= article.content %></p>
  </div>
</div>
<% }); %>
<% if (totalPage > 0) { %>
<nav aria-label="Page navigation">
  <ul class="pagination">
    <% if (page > 1) { %>
    <li>
      <a href="/article/list/<%= page - 1 %>/<%= number %>?keyword=<%= keyword %>" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>
    <% }%>

    <% for (let i = 1; i <= totalPage; i++) { %>
    <li class="<%= page === i ? 'active' : '' %>">
      <a href="/article/list/<%= i %>/<%= number %>?keyword=<%= keyword %>"><%= i %></a>
    </li>
    <% } %>

    <% if (page < totalPage) { %>
    <li>
      <a href="/article/list/<%= page + 1 %>/<%= number %>?keyword=<%= keyword %>" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
    <% }%>
  </ul>
</nav>
<% } %>
<%- include include/footer.ejs %>